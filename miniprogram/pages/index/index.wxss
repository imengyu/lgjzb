/* 主标签页 */
.main_tab {
  position: absolute;
  top: 50px;
  bottom: 70px;
  overflow-y: scroll;
  left: 0;
  right: 0;
}
.main_tab.show {
  display: block;
}
.main_tab.hide {
  display: none;
}
.main_tab.full {
  position: absolute;
  top: 48px;
  bottom: 70px;
  left: 0;
  right: 0;
}
/* 底栏  */
.footbar {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 70px;
  border-top: 1px solid #f5f5f5;
  z-index: 100;
  background-color: #fff;
  padding: 10px 0 0 0;
}

.footbar .item {
  display: inline-flex;
  width: 25%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.footbar .item image {
  width: 30px;
  height: 30px;
}
.footbar .item text {
  color: #939393;
  font-size: 14px;
}

.footbar .item.active text {
  color: #fc780d;
}

